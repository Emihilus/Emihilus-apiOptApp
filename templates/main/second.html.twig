{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    #hed{font-size: 14px;}
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    <button class="btn btn-primary" onclick="request()">Send Request & write to history to IMGW API</button> <label for="sel">Station</label>
	<select name="sel" id="select" onchange="processChange()">
		    {% for station in stations %}
		        <option value="{{station[1]}}">{{station[0]}}</option>
            {% endfor %} 
	</select>
    
    <p id="#out">Dzban</p>


<table class="table table-secondary table-hover">
  <theadclass="thead-dark">
    <tr>
      <th scope="col">Requested At</th>
      <th scope="col">Station ID</th>
      <th scope="col">Station</th>
      <th scope="col">Date</th>
      <th scope="col">Temp</th>
      <th scope="col">Wind speed</th>
      <th scope="col">Wind dir.</th>
      <th scope="col">Relative Wilg</th>
      <th scope="col">Drop sum</th>
      <th scope="col">Pressure</th>
    </tr>
  </thead>
  <tbody id="hed">
     {% for opt in opts %} 
     <tr>
        <td>{{opt.requestedAt|date('H:m d-m-Y')}}</td>
        <td>{{opt.currency}}</td>
        <td>{{opt.urls}}</td>
        <td>{{opt.Tags}}</td>
        <td>{{opt.date}}</td>
        <td>{{opt.estimatedRevenue}}</td>
        <td>{{opt.adImpressions}}</td>
        <td>{{opt.adEcpm}}</td>
        <td>{{opt.clicks}}</td>
        <td>{{opt.adCtr}}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>


</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}

<script>

function request()
{
	let url = "{{path ('getImgw') }}";

	$.ajax({
		url: url,
		method: "post", 
		data: JSON.stringify(
			{'stationid':$("#select").val()})
		})
	.done(res => 
	{ 
        if (res == '0')
            alert("Request failed");
        else
        {
            let json = JSON.parse(res);
            console.log(json);
            
            let tdHtml = `<td scope="row">now (frontend)</td><td scope="row">${json.id_stacji}</td><td scope="row">${json.stacja}</td><td scope="row">${json.data_pomiaru} ${json.godzina_pomiaru}</td><td scope="row">${json.temperatura}</td><td scope="row"></td><td scope="row"></td><td scope="row"></td><td scope="row"></td><td scope="row"></td><td scope="row"></td>`;
               /* data.forEach(function(fe)
                {
                    tdHtml += `<td scope="row">${fe}</td>`
                });*/

            let trc = document.createElement('tr');
            trc.innerHTML = tdHtml;
            document.getElementById('hed').prepend(trc);
            
        }
        

		
	});
}
</script>
{% endblock %}
