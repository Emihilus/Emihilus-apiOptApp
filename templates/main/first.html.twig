{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    #hed{font-size: 14px;}
</style>

<div class="example-wrapper">
    <h1>OptAd360 Test API</h1>
    <hr>
    <button class="btn btn-primary" onclick="request()">Send Request & write to history to OptAd360 TestApi</button> <label for="sel">Currency</label>
	<select name="sel" id="select" onchange="processChange()">
		<option selected value="1">PLN</option>
		<option value="2">EUR</option>
		<option value="3">USD</option>
	</select>
    
    


<table class="table table-secondary table-hover">
  <theadclass="thead-dark">
    <tr>
      <th scope="col">Requested at</th>
      <th scope="col">Curr.</th>
      <th scope="col">URLs</th>
      <th scope="col">Tags</th>
      <th scope="col">Date</th>
      <th scope="col">Est. rev.</th>
      <th scope="col">Ad impr.</th>
      <th scope="col">eCPM</th>
      <th scope="col">Clicks</th>
      <th scope="col">CTR</th>
    </tr>
  </thead>
  <tbody id="hed">
     {% for opt in opts %} 
     <tr>
        <td>{{opt.requestedAt|date('H:m d-m-Y')}}</td>
        <td>{{opt.currency}}</td>
        <td>{{opt.urls}}</td>
        <td>{{opt.Tags}}</td>
        <td>{{opt.date}}</td>
        <td>{{opt.estimatedRevenue}}</td>
        <td>{{opt.adImpressions}}</td>
        <td>{{opt.adEcpm}}</td>
        <td>{{opt.clicks}}</td>
        <td>{{opt.adCtr}}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>


</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}

<script>
function request()
{
	let url = "{{path ('getOptAd360') }}";

	$.ajax({
		url: url,
		method: "post", 
		data: JSON.stringify(
			{'currency':$("#select option:selected").text()})
		})
	.done(res => 
	{ 
        if (res == '0')
            alert("Request failed");
        else
        {
            let json = JSON.parse(res);
            console.log(json);
            json.data.forEach(function(data)
            {
                let tdHtml = '<td scope="row">now (frontend)</td><td scope="row">'+$("#select option:selected").text()+'</td>';
                data.forEach(function(fe)
                {
                    tdHtml += `<td scope="row">${fe}</td>`
                });

            let trc = document.createElement('tr');
            trc.innerHTML = tdHtml;
            document.getElementById('hed').prepend(trc);
            });
        }
        

		
	});
}
</script>
{% endblock %}
